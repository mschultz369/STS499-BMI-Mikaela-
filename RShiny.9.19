library(shiny)
library(ggplot2)
library(dplyr)

# read in dataset and create our model 
SmallIPUMS <- read.csv("newIPUMS.csv", header=TRUE)
SmallIPUMS <- SmallIPUMS[, -1]


# Define UI for application that draws a histogram

ui <- fluidPage(
   
   # Application title
   titlePanel("BMI for Age"),
   
   # Sidebar with a slider input for number of bins 
   sidebarLayout(
      sidebarPanel(
          selectInput("SEX", "Select Gender", choices = c("Male", "Female")
        ),
        
         sliderInput("bins",
                     "Number of bins:",
                     min = 1,
                     max = 50,
                     value = 30)
      ),
      
      # Show a plot of the generated distribution
      mainPanel(
         plotOutput("distPlot"), 
         tableOutput("tablehead")
      )
   )
)

# Define server logic required to draw a histogram
server <- function(input, output) {
  
  
  subdata <- reactive({
    filter(SmallIPUMS, SEX==ifelse(input$SEX == "Male", 1, 2))
  }) 
  
  output$distPlot <- renderPlot({
    ggplot(data=subdata(), aes(x=AGE, y=bmi)) + geom_point()
    
  })
    
   output$tablehead <- renderTable({
     head(subdata())
   })
}

# Run the application 
shinyApp(ui = ui, server = server)

